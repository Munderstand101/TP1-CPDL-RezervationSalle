{% extends 'base.html.twig' %}
{% block stylesheets %}
	<link rel="stylesheet" href="/styles/details.css">
{% endblock %}

{% block title %}
	Résultat de recherche
{% endblock %}


{% block body %}

{% if app.request.method == 'POST' %}
	<div>
		{% if salle| length == 0 %}
			<div class="row justify-content-end">
				<button type="button" class=" p-2 mb-2 col-auto bg-transparent border-0">

					<a href="{{ path('app_salle_index') }}" style="text-decoration:none; color:black;">
						<i class="bi bi-arrow-left-square"></i>
						Retour à la liste des salles
					</a>
				</button>
			</div>
			<h4>
				Désolé, aucun résulat pour votre recherche.
			</h4>

		{% else %}

			<h3 class="mt-3">
				<strong>
					Vos résulats de recherche :
				</strong>
			</h3>
			<div class="row justify-content-end">
				<button type="button" class=" p-2 mb-2 col-auto bg-transparent border-0">
					<i class="bi bi-arrow-left-square"></i>
					<a href="{{ path('app_salle_index') }}" style="text-decoration:none; color:black;">
						Retour à la liste des salles
					</a>
				</button>
			</div>
			<div class="row">
				<div class="col-10">
					{% for salle in salle %}
						<div class="card bg-transparent border-dark shadow mb-3" style="max-width: 840px;">
							<div class="card-body">
								<div class="row justify-content-between">
									<h3 class="card-title col-auto" >
										{{ salle.name}}
									</h3>
							
								</div>

					
							</div>
							<p>
								<a href="{{ path('app_salle_show', {'id': salle.id}) }}" class="text-decoration-none text-white btn btn-dark col-auto">
									Voir cette salle
								</a>
							</p>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
	{% endif %}
	{{ render(controller('App\\Controller\\SearchController::searchBar')) }}

</div>{% endif %}{% endblock %}