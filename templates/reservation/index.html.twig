{% extends 'base.html.twig' %}

{% block title %}Reservation index{% endblock %}

{% block body %}
    <h1>Reservation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Starting_date</th>
                <th>Ending_date</th>
                <th>Salle</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.id }}</td>
                <td>{{ reservation.startingDate ? reservation.startingDate|date('Y-m-d') : '' }}</td>
                <td>{{ reservation.endingDate ? reservation.endingDate|date('Y-m-d') : '' }}</td>
                 <td>{{ reservation.salle.name }}</td>
                <td>{{ reservation.description }}</td>
                <td>
                    <a class="btn btn-lg btn-primary" href="{{ path('app_reservation_show', {'id': reservation.id}) }}">show</a>
                    <a class="btn btn-lg btn-primary" href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-lg btn-primary" href="{{ path('app_reservation_new') }}">Create new</a>
{% endblock %}
