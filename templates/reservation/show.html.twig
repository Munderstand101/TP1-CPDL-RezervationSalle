    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>Starting_date</th>
                <td>{{ reservation.startingDate ? reservation.startingDate|date('Y-m-d') : '' }}</td>
            </tr>
